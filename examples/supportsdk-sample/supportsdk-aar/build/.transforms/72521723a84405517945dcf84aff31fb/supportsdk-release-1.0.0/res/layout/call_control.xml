<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:paddingTop="4dp"
    android:background="@drawable/panel_call_control_bg">

    <!-- GONE! - unable to reliable control speaker out, MOBILE-1249 -->
    <RelativeLayout
        android:id="@+id/speakerLayout"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="7dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
        <Button
            android:id="@+id/speakerButton"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/videobar_speaker_selector" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/speakerButton"
            android:gravity="center"
            android:text="@string/btn_label_mute_speaker"
            android:textColor="@android:color/white"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/microphoneLayout"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/speakerLayout"
        android:paddingTop="7dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
        <Button
            android:id="@+id/microphoneButton"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/videobar_mute_selector" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/microphoneButton"
            android:gravity="center"
            android:text="@string/btn_label_mute_mic"
            android:textColor="@android:color/white"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/microphoneLayout"
        android:paddingTop="7dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
        <Button
            android:id="@+id/recordButton"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/videobar_record_selector" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/recordButton"
            android:gravity="center"
            android:text="@string/btn_label_switch_cam"
            android:textColor="@android:color/white"
            android:textSize="11sp" />
    </RelativeLayout>

</RelativeLayout>