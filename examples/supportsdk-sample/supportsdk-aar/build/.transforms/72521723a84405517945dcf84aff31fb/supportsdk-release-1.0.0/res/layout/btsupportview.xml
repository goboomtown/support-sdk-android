<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/grid_item_padding">

    <com.goboomtown.video.BTAnnotationView
        android:id="@+id/annotation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_camera"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/wrap_buttonStopRecording"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop ="true"
        android:layout_alignParentRight="true">
        <Button
            android:id="@+id/buttonStopRecording"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/end_call_button_selector"
            android:text=""/>
    </RelativeLayout>

</FrameLayout>
