<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/buttonChatWithUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_chat_with_us" />

    <Button
        android:id="@+id/buttonWebSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_web_support" />

    <Button
        android:id="@+id/buttonEmailSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_email_support" />

    <Button
        android:id="@+id/buttonPhoneSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_phone_support" />

</LinearLayout>
