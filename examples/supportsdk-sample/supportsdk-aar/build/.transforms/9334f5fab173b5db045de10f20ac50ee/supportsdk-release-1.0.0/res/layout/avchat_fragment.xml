<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.goboomtown.video.CustomScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.goboomtown.video.ConferenceView
                    android:id="@+id/conference_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

            </LinearLayout>

        </com.goboomtown.video.CustomScrollView>

    </FrameLayout>

    <com.goboomtown.video.Panel
        android:id="@+id/vidnav_primary_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        custom:handle="@+id/vidnav_primary_panel_handle"
        custom:content="@+id/call_control_layout"
        custom:position="left"
        custom:openedHandle="@drawable/panel_switcher_expanded_side_start_selector"
        custom:closedHandle="@drawable/panel_switcher_collapsed_side_start_selector">
        <ImageView
            android:id="@id/vidnav_primary_panel_handle"
            android:layout_width="25dp"
            android:layout_height="96dp"
            android:layout_gravity="center_vertical" />
        <include
            android:id="@+id/call_control_layout"
            layout="@layout/call_control"
            android:layout_width="250dp"
            android:layout_height="96dp" />
    </com.goboomtown.video.Panel>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="5dp">
        <Button
            android:id="@+id/endOfCallButton"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/end_call_button_selector"
            android:text=""/>
    </RelativeLayout>

</RelativeLayout>

