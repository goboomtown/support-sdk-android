<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kbEntryLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/kbEntryIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/desc_kb_acticle_type_image" />

    <TextView
        android:id="@+id/kbEntryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="17dp"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/kbEntryIndicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/desc_kb_acticle_type_image"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/kbEntryViewIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text=">"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

</RelativeLayout>

