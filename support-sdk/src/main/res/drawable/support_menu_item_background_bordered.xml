<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@android:color/black" />
        </shape>
    </item>
    <item>
        <inset android:inset="2dp">
            <selector>
                <item android:drawable="@color/homeSelectedColor" android:state_pressed="true"/>
                <item android:drawable="@color/homeSelectedColor" android:state_selected="true"/>
                <item android:drawable="@color/homeSelectedColor" android:state_focused="true"/>
            </selector>
        </inset>
    </item>
</layer-list>